    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LC_HUB_UW8_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="LC_LandingPage_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Assets/SplashScreen.png" Stretch="None"></Image>
            <Button x:Name="Login_Button" Content="LOGIN" HorizontalAlignment="Stretch" Click="Login_Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
